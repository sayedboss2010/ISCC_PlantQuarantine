
@{
    ViewBag.Title = @PlantQuar.WEB.Language.Resource_data1.stationActivityType;
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



@section Title{
    <h2 class="ls-top-header">نوع النشاط</h2>
}

<br />

