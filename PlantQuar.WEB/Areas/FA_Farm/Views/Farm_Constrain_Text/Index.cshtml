
@model List<PlantQuar.DTO.DTO.Farm.FarmConstrain.Farm_Constrain_Text_CheckList_DTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}@section Title{
    <h2 class="ls-top-header">قائمة الاشتراطات</h2>



}

<script src="~/scripts/jquery.dataTables.min.js"></script>
<link href="~/assets/css/jquery.dataTables.min.css" rel="stylesheet" />



<div class="row">
    <div class="col-md-12">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            @Html.ActionLink(PlantQuar.WEB.Language.Resource_data1.Add, "Farm_Constrain_TextAddEdit", "Farm_Constrain_Text", new { area = "FA_Farm" }, new { @class = "btn btn-primary", @style = "width:100%" })
        </div>
    </div>
</div>
<div style="padding: 10px; background-color: whitesmoke">
    <div id="listFarm_Constrain_Text" class="row">
        <div class="col-md-12 dataTables_wrapper form-inline dt-bootstrap">
            <table id="Farm_Constrain_TextTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th hidden>ID</th>
                        <th>@PlantQuar.WEB.Language.Resource_data1.ArabicName</th>
                        <th>@PlantQuar.WEB.Language.Resource_data1.EnglishName</th>
                        <th>@PlantQuar.WEB.Language.Resource_data1.Description_Ar</th>
                        <th>@PlantQuar.WEB.Language.Resource_data1.Description_En</th>

                        <th>@PlantQuar.WEB.Language.Resource_data1.Active</th>
                        <th>متطلبات / تعليمات</th>
                        <th>@PlantQuar.WEB.Language.Resource_data1.Edit</th>
                        <th>@PlantQuar.WEB.Language.Resource_data1.Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td hidden>@item.ID</td>
                                    <td>@item.ConstrainText_Ar</td>
                                    <td>@item.ConstrainText_En</td>
                                    <td>@item.Description_Ar</td>
                                    <td>@item.Description_En</td>
                                    <td>@item.IsActive</td>
                                    <td>@item.Constrain_Type</td>
                                    <td hidden>@item.User_Creation_Date</td>
                                    <td hidden>@item.User_Creation_Id</td>
                                    <td hidden>@item.User_Deletion_Date</td>
                                    <td hidden>@item.User_Deletion_Id</td>

                                    <td hidden>@item.User_Updation_Date</td>
                                    <td hidden>@item.User_Updation_Id</td>

                                    <td>
                                        @Html.ActionLink(PlantQuar.WEB.Language.Resource_data1.Edit, "Farm_Constrain_TextAddEdit", "Farm_Constrain_Text", new { area = "FA_Farm", id = item.ID, name = item.Constrain_Type }, null)
                                    </td>
                                    <td>
                                        @*@Html.ActionLink(PlantQuar.WEB.Language.Resource_data1.Delete, "DeleteFarm_Constrain_Text", "Farm_Constrain_Text", new { area = "FA_Farm", FarmId = item.ID }, null)*@
                                        @Html.ActionLink(PlantQuar.WEB.Language.Resource_data1.Delete, "DeleteFarm_Constrain_Text", "Farm_Constrain_Text", new { area = "FA_Farm", id = item.ID, constrain = item.Constrain_Type }, null)
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

