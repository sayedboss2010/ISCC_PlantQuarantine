                    </div>

                </div>
                <br />
                <div class="row">
                    @*<div class="col-md-2">
                        <label class="control-label">@PlantQuar.WEB.Language.Resource_data1.Areainacre</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" value="@Model.area" disabled />

                       
                    </div>*@
                    @*<div class="col-md-6">
