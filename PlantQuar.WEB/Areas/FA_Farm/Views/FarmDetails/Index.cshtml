<script>
    $(document).ready(function () {

        $("#btnSave").click(function () {
            $("#txtIsAccepted").val(true);
        });

        $("#btnReject").click(function () {
            $("#txtIsAccepted").val(false);
            $("#submform").submit();
        });
    });


</script>