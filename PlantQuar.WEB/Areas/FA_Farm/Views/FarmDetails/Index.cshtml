}

@section Title{
    <h2 class="ls-top-header">تفاصيل المزرعة</h2>
}



<style>
    .form-rowr {
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px dashed #cbc5ba;
    }

    .control-label {
        font-size: 14px;
    }

    .form-control {
        font-size: 13px;
    }

    .label-info {
        font-size: 16px;
        text-align: center;
        padding: 6px;
        border-radius: 6px 20px;
    }

    th, tr, td {
        text-align: center;
    }

    button, html input[type="button"], input[type="reset"], input[type="submit"] {
        margin-right: 0px;
    }


    #btnSave, #btnReject, #btnReject, #PrintResultButton {
        background-color: #1e7c80 !important;
        border: 2px solid #1e8084 !important;
        box-shadow: 0 4px #1d9fa5 !important;
        outline: none;
        color: white;
        margin-bottom: 10px;
    }

        #btnSave, #btnReject, #btnReject, #PrintResultButton:hover {
            background-color: #1a8488 !important;
            border: 1px solid #1a8488 !important;
        }

    /*blockquote {
        margin-bottom: 70px !important;
    }*/

    .jtable thead tr {
        height: 50px;
    }

    div.jtable-main-container > table.jtable > thead th.jtable-column-header div.jtable-column-header-container {
        bottom: 12px !important;
    }

    #print {
        width: 90%;
        background-color: #1a8488 !important;
        border: 1px solid #1a8488 !important;
        box-shadow: 0 4px #1d9fa5 !important;
        outline: none;
        color: white;
        margin-bottom: 10px;
        height: 40px;
        font-size: 18px;
    }

    #innerDiv {
        border: 1px solid gray;
        border-radius: 20px;
        padding: 20px;
        height: auto;
        background-color: white;
        width: 100%;
    }

        #innerDiv input, #innerDiv textarea {
            width: 95%;
            border-radius: 20px;
            text-align: center
        }

        #innerDiv label {
            color: #185658;
        }

        #innerDiv .col-md-2 {
            text-align: center;
        }
</style>

