<script type="text/javascript">
        $(function () {
            $('#NonLive_Organism').jtable({
                title: 'كائن غير حى',
                paging: true,
                pageSize: 10,
                sorting: true,
                //defaultSorting: 'CourseName ASC',
                columnResizable: true,
                columnSelectable: true,
                saveUserPreferences: true,
                actions: {

                    listAction: '/ImportLookups/NonLive_Organism/listLive_Organism',
                    createAction: '/ImportLookups/NonLive_Organism/CreateLive_Organism',
                    updateAction: '/ImportLookups/NonLive_Organism/UpdateLive_Organism',
                    deleteAction: '/ImportLookups/NonLive_Organism/DeleteLive_Organism'
                },
                fields: {
                    ID: {
                        key: true,
                        create: false,
                        edit: false,
                        list: false
                    },
                    ImPermissionItem_ID: {

                        title: 'اذن الاستيراد',
                        inputClass: 'validate[required]',
                        options:'/ImportLookups/Im_Plant/List_PermissionItem'

                    },

                    LiableStatus_ID: {
                        title: 'حاله الكائن',
                        inputClass: 'validate[required]',
