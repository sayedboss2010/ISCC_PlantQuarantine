                       }

                       $("#table_List_Im_Check tbody").append(table_body + "</tr>");
                   });
               }
               if (data.Result == 1) {
                   alert("تم تشكيل لجنة ولا يمكن تعديل الميناء");
               }
               if (data.Result == 2) {
                   alert("لا يوجد طلب بهذاالرقم");
               }
            }
        });
        }
