            shipping_status = 1;
            list_of_values.push({
                Im_CheckRequest_Port_ID: CheckRequest_Port_ID_Shipping,
                Port_ID: New_InternationalShippingPortvalue,
                status: 1
            });
        }

        if (Old_InternationalPassage_CheckRequest_Port_ID == New_InternationalPassagePortvalue) { passage_status = 0; }
