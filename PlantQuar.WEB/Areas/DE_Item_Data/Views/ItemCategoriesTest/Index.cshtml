@model IEnumerable<PlantQuar.DAL.ItemCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<script src="~/scripts/jquery.dataTables.min.js"></script>
<link href="~/assets/css/jquery.dataTables.min.css" rel="stylesheet" />
<style>
    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        border-left: 1px solid #ddd;
    }

    tr {
        border-right: 1px solid #ddd;
        border-bottom: 1px solid #ddd;
    }

    .modal-header, .modal-footer {
        display: block;
        background: #4b788f !important;
        color: white;
        text-align: center;
    }

    button.quickview2 {
        height: auto;
        color: white;
        background-color: #39627fb0;
        border: 2px solid #39627f;
        box-shadow: 0 4px #06141ee8;
        outline: none;
        color: white;
        margin-top: 5px;
    }

    td a {
        border: 1px solid #39627f;
        height: 30px;
        display: inline-block;
        margin-bottom: 6px;
        width: 70px;
        text-align: center;
    }
</style>

<p>
    @Html.ActionLink("إنشاء صنف", "Create")
</p>
<table class="table table-striped table-bordered" style="width:100%" id="TestLoop">
    <thead>
        <tr>
            <th width="25%">بيانات النبات</th>
            <th width="25%">الاسم</th>
            <th width="28%">الحالة</th>
            <th width="10%">القرار</th>
            <th width="12%">الاجراءات</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span class="bold1">النوع:</span>


                    @Html.DisplayFor(modelItem => item.Item.Group.SecondaryClassification.MainCalssification.Item_Type.Name_Ar)
                    <br />
                    <span class="bold1">المجموعه:</span>
                    @Html.DisplayFor(modelItem => item.Item.Group.Name_Ar)
                    <br />
                    <span class="bold1">الكائن:</span>
                    @Html.DisplayFor(modelItem => item.Item.Name_Ar)
                    <br />
                    <span class="bold1">الصنف:</span>
                    @Html.DisplayFor(modelItem => item.ItemCategories_Type1.Name_Ar)
                </td>
                <td>
                    <span class="bold1">العربي:</span>
                    @Html.DisplayFor(modelItem => item.Name_Ar)
                    <br />
                    <span class="bold1">الانجليزي:</span>
                    @Html.DisplayFor(modelItem => item.Name_En)
                </td>
                <td>
                    <span class="bold2">المنع:</span>
                    @Html.DisplayFor(modelItem => item.IsForbidden)

                    <br />
                    <span class="bold2">الحالة:</span>
                    @Html.DisplayFor(modelItem => item.CurrentStatus)

                    <br />
                    <span class="bold2">مسجل:</span>
                    @Html.DisplayFor(modelItem => item.IsRegister)
                    <br />
                    <span class="bold2">موجود في مصر:</span>
                    @Html.DisplayFor(modelItem => item.Is_Plant_Egypt)
                </td>
                <td>
                    <button type='button' class='quickview2' data-toggle='modal'
                            data-target='#mymodalemanexamination'
                            data-item="@item.Resolution_Number"
                            data-qualitive=".qualitiveGroupName"
                            data-initiator="@item.Register_EndDate"
                            data-itemsn="@item.Resolution_Date"
                            data-gweight=".GrossWeight"
                            data-nweight=".Net_Weight"
                            data-pmatrial=".packageMaterial"
                            data-ptype=".packageType"
                            data-packcount=".Package_Count"
                            data-pweight=".Package_Weight"
                            data-purpose="@item.Protect_Property"
                            data-status="@item.Notes"
                            data-subpartname="@item.TimeOut"
                            data-unitcount=".Units_Number"
                            data-scientificname=".ScientificNameAr"
                            data-odrtxt=".Order_TextItem"
                            data-size=".Size"
                            data-fees=".Fees">
                        @PlantQuar.WEB.Language.Resource_data1.Details
                    </button>
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.ID })  <br />
                    @Html.ActionLink("التفاصيل", "Details", new { id = item.ID }) <br />
                    @Html.ActionLink("حذف", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="mymodalemanexamination" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
                <h4 class="modal-title">@PlantQuar.WEB.Language.Resource_data1.Details </h4>
            </div>
            <div class="modal-body" id="modaldetails">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default " data-dismiss="modal">@PlantQuar.WEB.Language.Resource_data1.Close</button>
            </div>
        </div>

    </div>
</div>

